{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Warning",
        "System": "Error"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "Enrich": ["FromLogContext", "WithExceptionDetails"],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/exceptions-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "MSSQL": "Data Source=localhost,1433;Initial Catalog=GameStoreDB;User ID=sa;Password=CapstoneProject123!;TrustServerCertificate=True;"
  },
  "InvoiceValidity": "30",
  "PaymentMicroservice": "http://localhost:5000/api/payments",
  "AllowedHosts": "*"
}
